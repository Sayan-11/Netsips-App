<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@color/colorLoginBackground">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#A8808080"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/article_featured_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="2dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/common_google_signin_btn_icon_dark" />

        <TextView
            android:id="@+id/article_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorLoginButtonBackground"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="March 23rd, 2020"
            tools:textColor="@color/colorLoginButtonBackground" />

        <TextView
            android:id="@+id/link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="ffasa"
            android:textColor="@color/colorLoginButtonBackground"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/article_date_text"
            app:layout_constraintEnd_toStartOf="@+id/article_featured_image"
            tools:textColor="@color/colorLoginButtonBackground" />

        <TextView
            android:id="@+id/article_title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/colorLoginButtonBackground"
            app:layout_constraintEnd_toStartOf="@+id/article_featured_image"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/article_date_text"
            tools:text="Corona virus symptoms: what are they and what do they mean?jhfsdgkjdsfhkjvhdofhvoidfhopvhodfnkjsjisjiovjosjodfjvosjvojsoijovijs"
            tools:textColor="@color/colorLoginButtonBackground" />

        <TextView
            android:id="@+id/article_tags_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawableStart="@drawable/ic_outline_tag_24"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/colorLoginButtonBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/article_title_text"
            app:layout_constraintVertical_bias="1.0"
            tools:drawableStart="@drawable/ic_outline_tag_24"
            tools:text="Add tags" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>