<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorLoginBackground">

                <TextView
                    android:id="@+id/LogOut"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:fontFamily="@font/raleway_light"
                    android:paddingLeft="25dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Log Out"
                    android:textColor="@color/colorLoginButtonBackground"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view2" />


                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="#A8808080"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:background="#A8808080"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/switch1" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="10dp"
                    android:background="#A8808080"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/LogOut"
                    android:layout_marginEnd="10dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2">

                    <Button
                        android:id="@+id/saveButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/save"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textColor="@color/colorLoginBackground"
                        app:backgroundTint="@color/colorLoginButtonBackground"
                        app:layout_constraintEnd_toEndOf="@+id/radioGroup"
                        app:layout_constraintStart_toStartOf="@+id/radioGroup"
                        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/poppins"
                        android:text="Newsletter"
                        android:textColor="@color/colorLoginButtonBackground"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="@+id/textView6"
                        app:layout_constraintTop_toBottomOf="@+id/textView6" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="10dp"
                        android:drawableStart="@drawable/settings_size"
                        android:drawablePadding="20dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:text="Settings"
                        android:textColor="@color/colorLoginButtonBackground"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/poppins"
                        android:text="When do you want your newsletter to be delivered?"
                        android:textColor="@color/colorLoginButtonBackground"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/textView3"
                        app:layout_constraintTop_toBottomOf="@+id/textView3" />

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        app:layout_constraintStart_toStartOf="@+id/textView4"
                        app:layout_constraintTop_toBottomOf="@+id/textView4">

                        <RadioButton
                            android:id="@+id/radioDaily"
                            style="@style/radioButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/raleway_light"
                            android:text="Daily"
                            android:textColor="@color/colorLoginButtonBackground"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/radioWeekly"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_light"
                            android:text="Weekly"
                            android:textColor="@color/colorLoginButtonBackground"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/radioCustom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_light"
                            android:text="Custom"
                            android:textColor="@color/colorLoginButtonBackground"
                            android:textSize="18sp" />


                        <RadioGroup
                            android:id="@+id/custom_weekdays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="25dp"
                            android:visibility="gone">

                            <CheckBox
                                android:id="@+id/day_monday_checkbox"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:text="@string/monday"
                                android:textColor="@color/colorLoginButtonBackground" />

                            <CheckBox
                                android:id="@+id/day_tuesday_checkbox"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:text="@string/tuesday"
                                android:textColor="@color/colorLoginButtonBackground" />

                            <CheckBox
                                android:id="@+id/day_wednesday_checkbox"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:text="@string/wednesday"
                                android:textColor="@color/colorLoginButtonBackground" />

                            <CheckBox
                                android:id="@+id/day_thursday_checkbox"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:text="@string/thursday"
                                android:textColor="@color/colorLoginButtonBackground" />

                            <CheckBox
                                android:id="@+id/day_friday_checkbox"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:text="@string/friday"
                                android:textColor="@color/colorLoginButtonBackground"
                                app:layout_constraintStart_toStartOf="@+id/day_monday_checkbox"
                                app:layout_constraintTop_toBottomOf="@+id/day_thursday_checkbox" />

                            <CheckBox
                                android:id="@+id/day_saturday_checkbox"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:text="@string/saturday"
                                android:textColor="@color/colorLoginButtonBackground" />

                            <CheckBox
                                android:id="@+id/day_sunday_checkbox"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:text="@string/sunday"
                                android:textColor="@color/colorLoginButtonBackground" />
                        </RadioGroup>


                    </RadioGroup>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:checked="false"
                    android:fontFamily="@font/raleway_light"
                    android:text="Dark Mode"
                    android:textColor="@color/colorLoginButtonBackground"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/imageView2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="150dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/roundedImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_profile_black"
                        tools:srcCompat="@tools:sample/avatars" />
                </androidx.cardview.widget.CardView>

                <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="#A8808080"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Name"
                    android:textColor="@color/colorLoginButtonBackground"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/textView8"
                    app:layout_constraintStart_toEndOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="@+id/imageView2" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="@string/rtd_field_email"
                    android:textColor="@color/colorBottomNavBarNotSelected"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/textView9"
                    app:layout_constraintStart_toStartOf="@+id/textView7"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="Bookmarks Saved"
                    android:textColor="@color/colorBottomNavBarNotSelected"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                    app:layout_constraintStart_toStartOf="@+id/textView7"
                    app:layout_constraintTop_toBottomOf="@+id/textView8" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </LinearLayout>
</layout>